<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="website_sale_show_stock_preview.preview_stock" name="Testing">
        <div class="mt-2">
            <div class="text-danger" t-if="virtual_available &lt;= 0">
                <i class="fa fa-exclamation-triangle" role="img" aria-label="Warning" title="Warning"/> Temporarily out of stock
            </div>
            <div class="text-success" t-if="virtual_available &gt; 0">
                In stock
            </div>
        </div>
    </t>

</templates>
